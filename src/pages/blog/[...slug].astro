---
import { getCollection } from 'astro:content';
import Container from '@/components/Container.astro';
import Head from '@/components/Head.astro';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

const formattedDate = new Intl.DateTimeFormat('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
}).format(entry.data.date);
---

<!doctype html>
<html lang="en">
  <head>
    <Head title={entry.data.title} description={entry.data.description} />
    <style>
      body {
        background-color: #ffffff !important;
        color: #000000 !important;
      }
    </style>
  </head>
  <body class="bg-white text-black font-sans">
    <article class="py-12 md:py-20">
      <Container>
        <div class="max-w-2xl mx-auto">
          <a href="/" class="inline-block mb-8 text-black/60 hover:text-black transition-colors">
            ‚Üê Back to Home
          </a>

          <div class="mb-12">
            <h1 class="text-3xl md:text-4xl font-normal mb-4 leading-tight">{entry.data.title}</h1>
            <p class="text-lg text-black/70 mb-6">{entry.data.description}</p>

            <div class="flex flex-wrap gap-4 text-sm text-black/60">
              <div>
                <span class="font-medium">By</span> {entry.data.author}
              </div>
              <div>
                <span class="font-medium">Date</span> {formattedDate}
              </div>
              {entry.data.coordinates && (
                <div>
                  <span class="font-medium">Coordinates</span> {entry.data.coordinates.lat}, {entry.data.coordinates.lng}
                </div>
              )}
            </div>
          </div>

          <div class="prose-content">
            <Content />
          </div>
        </div>
      </Container>
    </article>
  </body>
</html>

<style>
  :global(.prose-content h1) {
    font-size: 1.875rem;
    font-weight: 500;
    margin-top: 3rem;
    margin-bottom: 1.5rem;
    line-height: 1.3;
  }

  :global(.prose-content h2) {
    font-size: 1.5rem;
    font-weight: 500;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  :global(.prose-content h3) {
    font-size: 1.25rem;
    font-weight: 500;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    line-height: 1.3;
  }

  :global(.prose-content p) {
    margin-bottom: 1.5rem;
    line-height: 1.7;
    font-size: 1rem;
  }

  :global(.prose-content ul, .prose-content ol) {
    margin-left: 1.5rem;
    margin-bottom: 1.5rem;
    line-height: 1.7;
  }

  :global(.prose-content li) {
    margin-bottom: 0.5rem;
  }

  :global(.prose-content a) {
    text-decoration: underline;
    color: inherit;
  }

  :global(.prose-content a:hover) {
    opacity: 0.7;
  }

  :global(.prose-content strong) {
    font-weight: 600;
  }
</style>
