---
import Container from "@/components/Container.astro";
import { SITE } from "@/consts";
---

<header class="fixed top-0 left-0 right-0 z-50 backdrop-blur-sm border-b border-black/10 dark:border-white/10">
  <Container>
    <div class="flex justify-between items-center py-4">
      <a href="/" class="font-display font-bold text-2xl md:text-3xl hover:opacity-70 transition-opacity">
        {SITE.NAME}
      </a>
      <nav class="flex gap-4 items-center">
        <a href="#videos" class="hover:opacity-70 transition-opacity">Videos</a>
        <a href="#about" class="hover:opacity-70 transition-opacity">About</a>
        <div class="flex gap-2 ml-4">
          <button id="light-theme-button" class="w-8 h-8 flex items-center justify-center rounded-full hover:bg-black/5 dark:hover:bg-white/5">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="5"/><line x1="12" y1="1" x2="12" y2="3"/><line x1="12" y1="21" x2="12" y2="23"/><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/><line x1="1" y1="12" x2="3" y2="12"/><line x1="21" y1="12" x2="23" y2="12"/><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/></svg>
          </button>
          <button id="dark-theme-button" class="w-8 h-8 flex items-center justify-center rounded-full hover:bg-black/5 dark:hover:bg-white/5">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/></svg>
          </button>
        </div>
      </nav>
    </div>
  </Container>
</header>
